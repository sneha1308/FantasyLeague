<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/ivFantasyImage"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tvAppScreenHeading"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/_20sdp"/>


    <com.ptw.fantasyleagueapp.ui.CustomTextView
            style="@style/TxtHeaderRegularStyle"
            android:id="@+id/tvAppScreenHeading"
            android:text="@string/aboutTitle1"
            android:textSize="@dimen/_30sdp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/ivFantasyImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tvAppScreenSubHeading"
            app:layout_constraintEnd_toEndOf="parent"/>

    <com.ptw.fantasyleagueapp.ui.CustomTextView
            style="@style/TxtHeaderRegularStyle"
            android:id="@+id/tvAppScreenSubHeading"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAppScreenHeading"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center"
            android:layout_margin="@dimen/_16sdp"
            android:text="@string/aboutInfo1"/>


</androidx.constraintlayout.widget.ConstraintLayout>