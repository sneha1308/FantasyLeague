<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
            android:id="@+id/ivFantasyImage"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/tvAppScreenHeading"
            android:layout_width="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Make your Fantasy Team"
            android:textSize="40sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/ivFantasyImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/tvAppScreenSubHeading"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAppScreenHeading"
            android:textAlignment="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
            android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>