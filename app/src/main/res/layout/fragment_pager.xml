<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
            android:id="@+id/ivFantasyImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    <com.ptw.fantasyleagueapp.ui.CustomTextView
            style="@style/TxtHeaderRegularStyle"
            android:id="@+id/tvAppScreenHeading"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="Make your \n Fantasy Team"
            android:textSize="@dimen/_30sdp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/ivFantasyImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <com.ptw.fantasyleagueapp.ui.CustomTextView
            style="@style/TxtHeaderRegularStyle"
            android:id="@+id/tvAppScreenSubHeading"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAppScreenHeading"
            android:textAlignment="center"
            android:layout_margin="@dimen/_16sdp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."/>


</androidx.constraintlayout.widget.ConstraintLayout>