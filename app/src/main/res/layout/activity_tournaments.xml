<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".activity.TournamentsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/tournament_data_view"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:paddingTop="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            app:layout_constraintStart_toStartOf="parent">

        <TextView
                android:id="@+id/tvTeamsAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teams Available"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvMoneyRemaining"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/tvTeamsCount"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvTeamsAvailable"
                app:layout_constraintStart_toStartOf="parent"
                android:text="0/3"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/_20sdp"
                app:layout_constraintEnd_toStartOf="@+id/tvMoneyRemaining"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tvMoneyRemaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Money Remaining"
                app:layout_constraintStart_toEndOf="@+id/tvTeamsAvailable"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/tvMoneyRemainingValue"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvTeamsAvailable"
                app:layout_constraintStart_toEndOf="@+id/tvTeamsAvailable"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="14"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/_20sdp"
                android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>